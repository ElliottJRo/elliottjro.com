<div class="row">
  <div class="large-12 columns">
    <h3>Projects</h3>
    <hr>
  </div>
</div>

<div class="row">
    <div class="large-12 medium-10 small-10 large-centered columns">
        <ul class="small-block-grid-3 medium-block-grid-4">
        {{#each projectItem in model}}
        <li>
            {{#link-to "projects.projectItem" projectItem.id class="project-wrap"}}
                <img {{bind-attr src=projectItem.image}}>
                <label>{{projectItem.name}}</label>
            {{/link-to}}
        </li>
        {{/each}}
        </ul>
    </div>
</div>